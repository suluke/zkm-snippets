<div class="snippet">
  <input id="{{name}}-checkbox" type="checkbox" class="snippet-flipper" />
  <label class="snippet-inner" for="{{name}}-checkbox">
    <img src="/assets/{{name}}.png" class="snippet-front-face" />
    <div class="snippet-back-face">
      <div class="snippet-back-face-inner">
        <pre class="snippet-source-container">
          <code>
            {{> code }}
          </code>
        </pre>
        <a href="{{url}}" class="snippet-qr-code">
          {{> qr.svg }}
        </a>
      </div>
    </div>
  </label>
</div>